<h2>Volunteer: <%= @volunteer.name %></h2>


<form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename volunteer</label>
  <input id="name" name="name" type="text">

  <button type="submit" class="btn">Update Volunteer</button>
</form>

<form action="/projects/<%= @volunteer.project_id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn">Delete volunteer</button>
</form>
